# ============================================
# EXAMPLE TEMPLATE FOR API KEYS AND SECRETS
# COPY THIS FILE TO: application-secrets.properties
# THEN FILL IN YOUR ACTUAL API KEYS
# ============================================

# ============================================
# SPOTIFY API CONFIGURATION
# Get your credentials from: https://developer.spotify.com/dashboard
# 1. Create a new app
# 2. Copy Client ID and Client Secret
# 3. Add redirect URI: http://localhost:8080/api/callback/spotify
# ============================================
spotify.client-id=your_spotify_client_id_here
spotify.client-secret=your_spotify_client_secret_here
spotify.redirect-uri=http://localhost:8080/api/callback/spotify

# ============================================
# OPENWEATHER API CONFIGURATION
# Get your API key from: https://openweathermap.org/api
# 1. Sign up for free account
# 2. Generate API key
# ============================================
openweather.api-key=your_openweather_api_key_here
openweather.base-url=https://api.openweathermap.org/data/2.5

# ============================================
# UNSPLASH API CONFIGURATION
# Get your access key from: https://unsplash.com/developers
# 1. Create a new application
# 2. Copy Access Key and Secret Key
# ============================================
unsplash.access-key=your_unsplash_access_key_here
unsplash.secret-key=your_unsplash_secret_key_here

# ============================================
# OPENAQ API CONFIGURATION (Air Quality)
# Get your API key from: https://openaq.org/
# Note: OpenAQ API might be public, check documentation
# ============================================
openaq.api-key=your_openaq_api_key_here
openaq.base-url=https://api.openaq.org/v2

# ============================================
# DATABASE CREDENTIALS (PRODUCTION)
# ============================================
spring.datasource.username=your_production_db_username
spring.datasource.password=your_production_db_password
spring.datasource.url=jdbc:postgresql://your-db-host:5432/cityatlas

# ============================================
# JWT SECRET (For authentication if implemented)
# Generate a strong random string (256+ bits)
# ============================================
jwt.secret=your_very_long_random_jwt_secret_key_here_minimum_256_bits
jwt.expiration=86400000

# ============================================
# KAFKA CONFIGURATION (if using external Kafka)
# ============================================
spring.kafka.bootstrap-servers=localhost:9092
spring.kafka.username=your_kafka_username
spring.kafka.password=your_kafka_password
